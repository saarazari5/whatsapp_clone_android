    <style name="PasswordLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxBackgroundColor">#CC8BAC8F</item>
        <item name="endIconMode">password_toggle</item>
        <item name="hintTextColor">@color/white</item>
        <item name="passwordToggleTint">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="editTextColor">@color/app_primary</item>
    </style>

    <style name="PasswordInputStyle" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/app_primary</item>
    </style>



    <style name="InputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxBackgroundColor">#CC8BAC8F</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="editTextColor">@color/app_primary</item>
    </style>


