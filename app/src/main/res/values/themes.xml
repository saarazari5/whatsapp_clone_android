<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Whatsapp_clone" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_primary_light</item>
        <item name="android:statusBarColor">@color/app_primary_light</item>
    </style>

    <style name="AppTitleFont">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:elevation">4dp</item>
        <item name="fontStyle">italic</item>
    </style>


    <style name="ChatBackground">
        <item name="android:background">@drawable/whats_app_clone_background</item>
    </style>


    <!-- Light mode -->
    <!-- Screen background if light mode is on  -->
    <style name="SCREEN">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Texts background if light mode is on  -->
    <style name="TEXT">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Button background if light mode is on  -->
    <style name="BUTTON">
        <item name="android:backgroundTint">@color/app_primary_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:radius"> 30dp </item>
    </style>

    <!-- Button background if light mode is on  -->
    <style name="ICONS">
        <item name="android:tint">@color/black</item>
    </style>


    <style name="TOOLBARBackground">
        <item name="android:background">@color/app_primary_light</item>
    </style>

    <style name="Theme.Whatsapp_clone" parent="Base.Theme.Whatsapp_clone" />
</resources>