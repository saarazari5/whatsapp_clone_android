<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Whatsapp_clone" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="android:statusBarColor">@color/app_primary</item>
    </style>

    <style name="AppTitleFont">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:elevation">4dp</item>
        <item name="fontStyle">italic</item>
    </style>


    <style name="ChatBackground">
        <item name="android:background">@drawable/whats_app_clone_background</item>
    </style>

<!--    login styles-->
    <style name="CONTAINER_BACKGROUND">
        <item name="android:background">@drawable/login_container_background</item>
    </style>

    <style name="loginPic">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:contentDescription">@string/icon_img</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_logo</item>
    </style>

    <style name="loginTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/login_pic</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/login_header</item>
        <item name="android:textColor">@color/loginTitle</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="passwordInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_below">@id/username_input</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">@string/password_placeholder</item>
        <item name="android:textColorHint">@color/inputLoginPlaceholder</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">50dp</item>
    </style>

    <style name="registerBtn">
        <item name="android:color">@color/registerBtn</item>
        <item name="android:text">@string/register_link_text</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="rightArrow">
        <item name="android:contentDescription">@string/right_arrow_icon</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">50dp</item>
        <item name="android:src">@drawable/ic_right_arrow_icon</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="leftArrow">
        <item name="android:contentDescription">@string/left_arrow_icon</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:src">@drawable/ic_left_arrow_icon</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Light mode -->
    <!-- Screen background if light mode is on  -->
    <style name="SCREEN">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Texts background if light mode is on  -->
    <style name="TEXT">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Button background if light mode is on  -->
    <style name="BUTTON">
        <item name="android:backgroundTint">@color/app_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:radius"> 30dp </item>
    </style>

    <!-- Button background if light mode is on  -->
    <style name="ICONS">
        <item name="android:tint">@color/black</item>
    </style>


    <style name="TOOLBARBackground">
        <item name="android:background">@color/app_primary</item>
    </style>

    <style name="Theme.Whatsapp_clone" parent="Base.Theme.Whatsapp_clone" />




    <style name="PasswordLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/app_primary</item>
        <item name="boxBackgroundColor">@color/dark_gray</item>
        <item name="endIconMode">password_toggle</item>
        <item name="hintTextColor">@color/app_primary</item>
        <item name="passwordToggleTint">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="errorTextColor">#CCDA1414</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="PasswordInputStyle" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/app_primary</item>
    </style>



    <style name="InputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/app_primary</item>
        <item name="boxBackgroundColor">@color/dark_gray</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintTextColor">@color/app_primary</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


    <style name="InputLayoutStyle2" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/app_primary</item>
        <item name="boxBackgroundColor">@color/dark_gray</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintTextColor">@color/app_primary</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>



    <style name="usernameInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_below">@id/login_form_title</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/username_placeholder</item>
        <item name="android:textColorHint">@color/inputLoginPlaceholder</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">50dp</item>
    </style>



</resources>